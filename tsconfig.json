{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strictNullChecks": false,
		"noUnusedParameters": true,
		"rootDir": ".",
		"experimentalDecorators": true,
		"baseUrl": "./",
		"paths": {
			"*": [
				"node_modules/vscode/*",
				"*"
			]
		},
		"typeRoots": [
			"node_modules/@types/",
			"./gremlin.d.ts"
		]
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
